<Window x:Class="LinearRegressionWPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:view_models="clr-namespace:LinearRegressionWPF.ViewModels"
        mc:Ignorable="d"
        Title="Linear Regression" Height="500" Width="1100">
    <Window.DataContext>
        <view_models:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!-- Parameters -->
        <Border Grid.Row="0" Grid.RowSpan="4" Grid.Column="0" Padding="20,10,0,0">
            <DockPanel LastChildFill="False">

                <Button Name="OpenDataFile" Content="Import data"
                        Command="{Binding OpenDataFileCommand}"
                        DockPanel.Dock="Top"
                        HorizontalAlignment="Left"
                        Height="30" Width="100"
                        Background="LightBlue" />

                <Label Content="Model" DockPanel.Dock="Top" HorizontalAlignment="Left"
                       Margin="0,20,0,0" Padding="0,0,0,5"/>
                <ComboBox Name="ModelComboBox"
                          ItemsSource="{Binding AvailableModelsArray}"
                          SelectedItem="{Binding SelectedModel}"
                          DockPanel.Dock="Top" HorizontalAlignment="Left"
                          Width="200">
                </ComboBox>

                <Label Content="Loss Function" DockPanel.Dock="Top" HorizontalAlignment="Left"
                       Margin="0,20,0,0" Padding="0,0,0,5"/>
                <ComboBox Name="LossFunctionComboBox"
                          ItemsSource="{Binding AvailableLossFunctionsArray}"
                          SelectedItem="{Binding SelectedLossFunction}"
                          DockPanel.Dock="Top" HorizontalAlignment="Left"
                          Width="200">
                </ComboBox>

                <Label Content="Otpimizer" DockPanel.Dock="Top" HorizontalAlignment="Left"
                       Margin="0,20,0,0" Padding="0,0,0,5"/>
                <ComboBox Name="OptimizerComboBox"
                          ItemsSource="{Binding AvailableOptimizersArray}"
                          SelectedItem="{Binding SelectedOptimizer}"
                          DockPanel.Dock="Top" HorizontalAlignment="Left"
                          Width="200">
                </ComboBox>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top"
                            VerticalAlignment="Center" Margin="0,5,0,0">
                    <Label Content="Learning rate:"
                           VerticalAlignment="Center"
                           Padding="0,5,5,5"/>
                    <TextBox Text="{Binding LearningRate}"
                             KeyDown="TextBoxEnterUpdate"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Right"
                             Height="30" Width="80" />
                </StackPanel>

                <Button Name="Train" Content="Train"
                        Command="{Binding TrainCommand}"
                        DockPanel.Dock="Top"
                        HorizontalAlignment="Left"
                        Height="30" Width="100"
                        Margin="0,20,0,0"
                        Background="LightGreen" />

            </DockPanel>
        </Border>

        <!-- Graph -->
        <oxy:PlotView Name="MainPlot" Model="{Binding RegressionPlot.OxyModel}"
                      Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" />

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal"
                    VerticalAlignment="Center" HorizontalAlignment="Right">

            <Label Content="Slope:" />
            <TextBox Text="{Binding Slope}"
                     KeyDown="TextBoxEnterUpdate"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Right"
                     Height="30" Width="80"
                     Margin="0,0,20,0" />

            <Label Content="y-Intercept:" />
            <TextBox Text="{Binding YIntercept}"
                     KeyDown="TextBoxEnterUpdate"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Right"
                     Height="30" Width="80"
                     Margin="0,0,20,0" />

            <Button Name="RandomLine" Content="Random"
                    Command="{Binding AddRandomLineCommand}"
                    Height="30" Width="100"
                    Background="LightGreen"
                    Margin="0,0,20,0" />

        </StackPanel>

        <!-- Regression menu -->
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal"
                    VerticalAlignment="Center" HorizontalAlignment="Right">

            <Label Content="Step size:" Margin="20,0,0,0" />
            <TextBox Text="12"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Right"
                     Height="30" Width="80" />
            <Button Name="Step" Content="Step"
                    Height="30" Width="50"
                    Background="LightGreen"
                    Margin="5,0,0,0" />
            <Button Name="Show" Content="Show"
                    Height="30" Width="50"
                    Background="LightGreen"
                    Margin="5,0,0,0" />

            <Label Content="Data point:" Margin="20,0,0,0" />
            <TextBox Text="12"
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Right"
                     Height="30" Width="80" />
            <Label Content="Prediction:" />
            <TextBox Text=""
                     VerticalContentAlignment="Center"
                     HorizontalContentAlignment="Right"
                     Height="30" Width="80" />
            <Button Name="Predict" Content="Predict"
                    Height="30" Width="50"
                    Background="LightGreen"
                    Margin="5,0,20,0" />

        </StackPanel>
    </Grid>
</Window>
