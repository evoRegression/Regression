        <Border Grid.Row="6" Grid.Column="4" Padding="20,10,0,0" Grid.ColumnSpan="6" Margin="0,10,108,0" Grid.RowSpan="4" >
            <DockPanel LastChildFill="False" VerticalAlignment="Center" Height="60">
                <DockPanel LastChildFill="False" DockPanel.Dock="Left"
                           Margin="0 0 20 0">
                    <Label Content="Bias" DockPanel.Dock="Top"
                           HorizontalAlignment="Left" Padding="0,0,0,5" />
                    <TextBox Text="{Binding BiasMock}"
                             
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Center"
                             Height="23" Width="80" />
                </DockPanel>

                <DockPanel LastChildFill="False" DockPanel.Dock="Left"
                           Margin="0 0 20 0">
                    <Label Content="Weighted sum" DockPanel.Dock="Top"
                           HorizontalAlignment="Left" Padding="0,0,0,5" />
                    <TextBox Text="{Binding WeightedSum}"
                             IsReadOnly="True"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Center"
                             Height="23" Width="80" />
                </DockPanel>

                <DockPanel LastChildFill="False" DockPanel.Dock="Left"
                           Margin="0 0 20 0">
                    <Label Content="Activation Function" DockPanel.Dock="Top"
                           HorizontalAlignment="Left" Padding="0,0,0,5" />
                    <ComboBox Name="SingleNeuronComboBox"
                              ItemsSource="{Binding AvailableActivationFunctionsArray}"
                              SelectedItem="{Binding SelectedActivationFunction}"
                              DockPanel.Dock="Top" HorizontalAlignment="Left"
                              Width="120">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </DockPanel>

                <DockPanel LastChildFill="False" DockPanel.Dock="Left"
                           Margin="0 0 20 0">
                    <Label Content="Activation" DockPanel.Dock="Top"
                           HorizontalAlignment="Left" Padding="0,0,0,5" />
                    <TextBox Text="{Binding Activation}"
                             IsReadOnly="True"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             HorizontalContentAlignment="Center"
                             Height="23" Width="80" />
